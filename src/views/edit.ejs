<!DOCTYPE html>
<html lang="pt-br">

<%- include('partials/head.ejs') %> 

<body>
  
  <h1><%= title %> </h1>
  <%- include('partials/navbar.ejs') %> 
  
  <form action="/edit/<%= customer._id %> " method="POST">
    <div>
      <label>Nome</label>
      <input type="text" name="name" placeholder="Digite o seu nome" value="<%= customer.name %> ">
    </div>
    <div>
      <label>Idade</label>
      <input type="text" name="age" placeholder="Digite a sua idade" value="<%= customer.age %> ">
    </div>
    <div>
      <label>E-mail</label>
      <input type="text" name="email" placeholder="Digite o seu e-mail" value="<%= customer.email %> ">
    </div>
    <button type="submit">Editar</button>
  </form>
  
  <%- include('partials/foot.ejs') %> 

  <% if (typeof message !== 'undefined') { %>
   <%= message %> 
  <% } %>
  
</body>
</html>